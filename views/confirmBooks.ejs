<%- include('partials/header') %>

    
    <!-- BOOK DATA DISPLAY  -->
    <div class="wrapper">
        <h1 class="mt-5 ms-auto me-auto dashboard-heading">Successfully Borrowed!</h1>
        <div class="row mt-3 ms-auto me-auto tables">

            <% for(let i in borrowedBookData) { %>
                <div class="col-md-4 mt-4 ms-auto me-auto text-center">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> <%= borrowedBookData[i]['name'] %> </h5>
                            <h6 class="card-subtitle mb-2 text-muted">Written By: <%= borrowedBookData[i]['author'] %> </h6>
                            <p class="card-text">This book published in the year <%= borrowedBookData[i]['year'] %>, belongs to the 
                                genre of <%= borrowedBookData[i]['genre'] %>
                            </p>
                            <p class="card-text mt-2">Price: <%= borrowedBookData[i]['price'] %></p>
                            <p class="card-text">ISBN: <%= borrowedBookData[i]['isbn'] %></p> 
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    
        <h5 class="mt-5 ms-auto me-auto text-center">You can collect the books at MIT, IT Libray between the 
            hours 9AM-5PM within 2 days.
        </h5>
    </div>
    

<%- include('partials/footer') %>
